{
  "name": "Handsfree Chrome",
  "version": "0.0.1",
  "description": "Browse the web, watch videos, play games, shop, use social media, and more all handsfree by using face gestures to control a pointer!",
  "manifest_version": 2,

  "options_page": "src/options.html",

  "icons": {
    "16": "src/assets/img/favicon.png",
    "32": "src/assets/img/favicon.png",
    "48": "src/assets/img/favicon.png",
    "64": "src/assets/img/favicon.png"
  },

  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/assets/img/favicon.png",
      "32": "src/assets/img/favicon.png",
      "48": "src/assets/img/favicon.png",
      "64": "src/assets/img/favicon.png"
    }
  }
}
